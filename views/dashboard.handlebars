        <div class="mb-5 mx-4" style="height: 400px; width: 400px;">
          <canvas id="chart" style="height: 400px; width: 400px;"></canvas>
        </div>
        <div class="d-grid gap-3 mt-5">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-success dropdown-toggle" style="opacity: 0.8" data-bs-toggle="dropdown" aria-expanded="false">
