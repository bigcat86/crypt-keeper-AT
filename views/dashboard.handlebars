<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#" style="font-size: 50px; font-family: Rubik Wet Paint; color: gold">Crypt Keeper</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <button type="button" class="btn btn-outline-warning" id="logout">Logout</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main>

  <div class="container-fluid text-center">
  <div class="row d-flex">

    <div class="d-flex flex-column col-xl-3 col-lg-6 col-sm-12 align-items-center"id="col1">
        <h3 class="mb-5 mt-3" style="text-transform: capitalize;">{{user.user_name}} Portfolio</h3>
        <div class="mb-5 mx-4" style="height: 400px; width: 400px;">
          <canvas id="chart" style="height: 400px; width: 400px;"></canvas>
        </div>
        <div class="d-grid gap-3 mt-5">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-success dropdown-toggle" id="buy-refresh" style="opacity: 0.8" data-bs-toggle="dropdown" aria-expanded="false">
              Buy
            </button>
            <ul class="dropdown-menu" id="buy-drop "style="width: 300px;">
                <div class="input-group mb-3">
                  <button class="btn btn-outline-success" id="buy" type="button">Buy</button>
                  <select class="form-select" id="buy-options" aria-label="Example select with button addon">
                  <option selected>Pick a coin...</option>
                  {{#each coinPriceArr}}
                  <option value=`{{{this}}}`>{{{this}}} | ${{{this}}}</option>
                  {{/each}}
                </select>
                </div>
              <div class="input-group mb-3" style="width: 150px;">
                <span class="input-group-text" id="inputGroup-sizing-default">Qty</span>
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              </div>
            </ul>
            </div>

           <div class="btn-group" role="group">
            <button type="button" class="btn btn-danger dropdown-toggle" style="opacity: 0.8" data-bs-toggle="dropdown" aria-expanded="false">
              Sell
            </button>
            <ul class="dropdown-menu" style="width: 300px;">
              <div class="input-group mb-3">
                  <button class="btn btn-outline-danger" type="button">Sell</button>
                  <select class="form-select" id="sell-options" aria-label="Example select with button addon">
                  <option selected>Pick a coin...</option>
                  {{#each dataArr as |coin|}}
                  <option value="{{coin.[0]}}">{{coin.[0]}}</option>
                  {{/each}}
                </select>
              </div>            
            </ul>
          </div>
            <button class="btn btn-light" type="button" style="opacity: 0.6;"><i class="bi bi-arrow-repeat mx-2"></i>Refresh</button>
          </div>
    </div>

    <div class="d-flex flex-column col-xl-6 col-lg-6 col-sm-12 align-items-center" id="col2">
      <h3 class="mb-5 mt-3 w-100">Market Dashboard</h3>
      <ul class="list-group list-group-horizontal justify-content-center mb-3 w-100">
        <li class="list-group-item bg-light text-dark flex-fill" style="opacity: 0.6">COIN</li>
        <li class="list-group-item bg-light text-dark flex-fill" style="opacity: 0.6">SYMBOL</li>
        <li class="list-group-item bg-light text-dark flex-fill" style="opacity: 0.6">PRICE</li>
        <li class="list-group-item bg-light text-dark flex-fill" style="opacity: 0.6">MARKET CAP</li>
        <li class="list-group-item bg-light text-dark flex-fill" style="opacity: 0.6">24H VOL</li>
      </ul>
      {{#each dataArr as |coin|}}
      <ul class="list-group list-group-horizontal-sm justify-content-center mb-3 w-100">
        <li class="list-group-item flex-fill" style="width: 200px;">{{coin.[0]}}</li>
        <li class="list-group-item flex-fill" style="width: 200px;">{{coin.[0]}}</li>
        <li class="list-group-item flex-fill" style="width: 200px;">${{coin.[1].usd}}</li>
        <li class="list-group-item flex-fill" style="width: 200px;">${{large-number coin.[1].usd_market_cap}}</li>
        <li class="list-group-item flex-fill" style="width: 200px;">${{large-number coin.[1].usd_24h_vol}}</li>
      </ul>
      {{/each}}
    </div>

    <div class="d-flex flex-column col-xl-3 col-lg-12 col-sm-12 align-items-center" id="col3">
      <h3 class="mb-5 mt-3 mb-5">Performance</h3>
      <div style="height: 400px; width: 400px;">
        <img src="/images/linechart.png" style="height: 400px; width: 400px; opacity: 0.7">
      </div>
      <div class="d-grid gap-2 mt-5">
         <button class="btn btn-light btn-lg" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" style="opacity: 0.6" type="button">portfolioGPT</button>
      </div>
      <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header">
        <h1 class="offcanvas-title" id="offcanvasRightLabel">portfolioGPT say:</h1>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
        <div class="offcanvas-body">
        ...
        </div>
    </div>
      
    </div>

  </div>
  </div>

  </main>


<script>
    const ctx = document.getElementById('chart');
    Chart.defaults.global.defaultFontColor = "#fff"

    let portfolioChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
        labels: [{{#each coinArr}} `{{this}}`, {{/each}}],
            datasets: [{
                label: 'Value USD:',
                data: [{{#each dataArr}} {{this.[1].usd}}, {{/each}}],
                backgroundColor: ['orange', 'red', 'yellow', 'pink'],
            }]
        }
    });


</script>
<script src="/js/main.js"></script> 
</body>
</html>