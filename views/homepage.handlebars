</nav>
  
<div class="container text-center">    
  <div class="row">
    <div class="col-sm-3 well">
      <div class="well">
        <p><a href="#" style="text-transform:uppercase;">{{user.user_name}} Profile</a></p>
        <img src="" class="img-circle" height="65" width="65" alt="Avatar">
      </div>
      <div class="well p-2" style="width:300px; height:300px;">
        <canvas id="chart" style="width:300px; height:300px;"></canvas>
      </div>
      <div class="well">
        <button type="button" class="btn btn-success">Add</button>
        <button type="button" class="btn btn-danger">Sell</button>
        <button type="button" class="btn btn-info">Refresh</button>
      </div>
      <div class="well">
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Crypto Available
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <li><a class="dropdown-item" href="#">Crypto</a></li>
              <li><a class="dropdown-item" href="#">Dogecoin</a></li>
            </div>
          </div>
      </div>
    </div>
    <div class="col-sm-7">
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <p contenteditable="true"></p> 
            </div>
          </div>
        </div>
      </div>
      
      {{!-- Render crypto data --}}
      {{#each coins as |coin|}}
        <div class="row">
          <div class="col-sm-3">
            <div class="well">
              <p>{{coin.coin_name}}</p>
              <img src="" class="img-circle" height="55" width="55" alt="Crypto">
            </div>
          </div>
          <div class="col-sm-3">
            <div class="well">
              <p>{{coin.price}}</p>
            </div>
          </div>
        </div>
      {{/each}}
      
    </div>
    <div class="col-sm-2 well">
      {{!-- Render chart --}}
      <div class="well m-2">
        <p>Chart</p>
      </div>      
      {{!-- Render GPT off-canvas --}}
      <div class="well m-2">
      <button class="btn btn-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">portfolioGPT</button>

        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
            <div class="offcanvas-header">
                 <h5 class="offcanvas-title" id="offcanvasRightLabel">portfolioGPT says:</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <p>
                    {{resGPT}}
                </p>
            </div>
        </div>
        </div>
        <div class="well m-2">
            <p>Other</p>
        </div>    
      </div>
    </div>
  </div>
</div>

<footer class="container-fluid text-center">
  <p>Footer Text</p>
</footer>
<script src="/js/main.js"></script>
</body>

